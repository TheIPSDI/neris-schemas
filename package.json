{
  "name": "@ipsdi/neris-schemas",
  "version": "0.0.1",
  "description": "JSON Schema definitions for validating NERIS (National Emergency Response Information System) data",
  "keywords": [
    "neris",
    "fire-department",
    "emergency-response",
    "json-schema",
    "validation",
    "nfirs"
  ],
  "homepage": "https://github.com/TheIPSDI/neris-schemas",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheIPSDI/neris-schemas.git"
  },
  "license": "MIT",
  "author": "IPSDI",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts"
    },
    "./schemas/*": "./schemas/*",
    "./v1/*": "./schemas/v1/*"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "schemas"
  ],
  "scripts": {
    "generate": "tsx scripts/generate.ts",
    "generate:types": "tsx scripts/generate-types.ts",
    "build": "npm run generate && npm run generate:types && tsup src/index.ts --format cjs,esm --dts --shims",
    "lint": "eslint . && tsc --noEmit",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "npm run lint && npm run build",
    "prepublishOnly": "npm run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.10.0",
    "ajv": "^8.12.0",
    "eslint": "^9.0.0",
    "json-schema-to-typescript": "^15.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "yaml": "^2.3.4"
  },
  "peerDependencies": {
    "ajv": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "ajv": {
      "optional": true
    }
  }
}